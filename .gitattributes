# Force GitHub Linguist to detect only PHP/Blade
*.php linguist-detectable=true
*.blade.php linguist-detectable=true

# Ignore all CSS files everywhere
*.css linguist-vendored

# Ignore JS build files
/public/js/* linguist-vendored
/public/build/* linguist-vendored

# Ignore vendor and node_modules
/vendor/* linguist-vendored
/node_modules/* linguist-vendored

# Ignore common build configs
*.lock linguist-vendored
package.json linguist-vendored
webpack.mix.js linguist-vendored
vite.config.js linguist-vendored
